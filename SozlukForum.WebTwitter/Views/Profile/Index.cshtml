                            if (item.ProfilResmi.ResimYolu != null) {
                                str += '                <a href="../Profile/TakipProfil?KullaniciId=' + item.Kullanici.KullaniciId + '"  onclick="TakipIdGonder(' + item.Kullanici.KullaniciId + ')">';
                                str += '                    <img src="' + item.ProfilResmi.ResimYolu + '" alt="Profil">';
                                str += '                </a>';
                            }
                            else {
                                str += '                <a href="../Profile/TakipProfil?KullaniciId=' + item.Kullanici.KullaniciId + '"  onclick="TakipIdGonder(' + item.Kullanici.KullaniciId + ')">';
                                str += '                    <img src="../Content/images/twitter-sozluk.png" alt="Profil">';
                                str += '                </a>';
                            }
