                                str += '';
                            }
                            else {
                                if (item.Kullanici.TakipEdildikleri.includes(parseInt(userId))) {
                                    str += '                    <a style="float:right; margin:15px; color:green;" id="takipBtn-' + item.Kullanici.KullaniciId + '" data-follow="false" onclick="TakipEtBirak(' + item.Kullanici.KullaniciId + ',this.id)"  href="javascript:void(0)" ';
                                    str += '                        class="btn btn-success">';
                                    str += '                        Takip Ediliyor';
                                    str += '                </a>';
                                }
