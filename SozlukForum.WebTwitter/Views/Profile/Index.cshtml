                            str += '            </div>';
                            $("#takipciDiv").append(str);
                        }
                    }
                }, error: function (data) {
                    console.log(data.responseText);
                }
            });
        }
        function TakipEdilenler(id) {
            $.ajax({
                type: "GET",
                url: "../KullaniciTakip/KullanicininTakipEttikleri?KullaniciId=" + id,
                dataType: "json",
                async: true,
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.item.length > 0) {
                        for (var item of data.item) {
                            console.log("Kullanicinin TakipEttikleri: " + item.Kullanici.KullaniciAdi);
                            var str = "";
