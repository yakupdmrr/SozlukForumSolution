                            html: true
                        },
                            function () {
                                window.location.reload();
                            });
                    }
                    else {
                        Alert_Error("Paylaşma Hatası", data.msg);
                    }
                }, error: function (data) {
                    console.log(data.responseText);
                }
            });
        }

