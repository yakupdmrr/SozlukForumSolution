            $.ajax({
                type: "POST",
                url: "../Paylasim/PaylasimEkle",
                data: formData,
                async: true,
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.drm) {
                        swal({
                            title: "Gönderi Paylaşma",
                            text: "Başarıyla Gönderi Paylaşıldı.",
                            type: 'success',
                            showConfirmButton: true,
